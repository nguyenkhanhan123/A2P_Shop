<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="0dp"
    android:padding="12dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:id="@+id/lnOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:paddingVertical="2dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                android:text="Mã đơn: 684410cc"
                android:textSize="16sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="5dp"
                android:src="@android:drawable/ic_menu_agenda"
                app:tint="@color/black" />
        </LinearLayout>

        <!-- Trạng thái đơn hàng -->
        <TextView
            android:id="@+id/tvOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="⏳ Chờ xử lý"
            android:textColor="#FFA500"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Tên khách + ngày -->
        <TextView
            android:id="@+id/tvCustomerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="👤 Nguyễn Văn A   |   📅 07/06/2025"
            android:textColor="@color/black"
            android:layout_gravity=""
            android:textSize="14sp" />

        <!-- Sản phẩm + tiền -->
        <TextView
            android:id="@+id/tvOrderSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="🛒 2 sản phẩm   |   💵 180.000$"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Địa chỉ -->
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="📍 123 Đường ABC, Hà Nội"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
